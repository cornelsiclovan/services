
    <div class="row">

        <div class="col-sm-12">
            <table class="table">
                <tr>
                    <td scope="col">#</td>
                    <th scope="col">Denumire </th>
                    <th scope="col">Descriere</th>
                </tr>
                {%  set i = 0 %}
                {%  for clientService in clientServices %}
                    {%  set i = i + 1 %}
                    <tr>
                        <th scope="row">{{ i }}</th>
                        <td>{{ clientService.service }}</td>
                        <td>
                        {% for subService in clientService.subServices %}
                             {{ subService.name }}
                       {% endfor %}
                        </td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    </div>

