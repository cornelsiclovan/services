
{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <h1>Alegeti un serviciu:</h1>
    <a href="{{ path('provider_service_new') }}" class="btn btn-primary pull-right">
        Adauga <span class="fa fa-plus-circle"></span>
    </a>

<div class="row">

    <div class="col-sm-12">
        <table class="table">
            <tr>
                <td scope="col">#</td>
                <th scope="col">Denumire </th>
                <th scope="col">Subservicii</th>
            </tr>
            {%  set i = 0 %}
            {%  for userSubService in userSubServices %}
                {%  set i = i + 1 %}
                <tr>
                    <th scope="row">{{ i }}</th>
                    <td><a href="{{ path('provider_service_edit', {'id' : userSubService.id }) }}">{{ userSubService.service }}</td>
                    <td>
                    {% for subService in userSubService.subService %}
                        {{ subService.name }},
                    {% endfor %}
                    </td>
                </tr>
            {% endfor %}

        </table>
    </div>
</div>
</div>
{% endblock %}